<mjml lang="ru">
  <mj-head>
    <mj-title>Восстановление пароля на сайте OptMoyo.ru</mj-title>

    <mj-attributes>
      <mj-all font-family="Arial, Helvetica" />
      <mj-text color="#232d37" font-size="17px" line-height="22px" />
      <mj-button color="#fff" background-color="#ab064e" font-size="16px" line-height="28px" font-weight="bold" border-radius="6px" />
      <mj-divider border-color="#f0f0f0" border-width="1px" padding="30px 25px" />
      <mj-section padding="0 15px" background-color="#fff" />
      <mj-body background-color="#f7f7f7" />
      <mj-button color="#fff" />

